.youhui{
  height: 288rpx;
}
.youhui1{
  height: 88rpx;
}
.youhui1 view{
  height: 88rpx;
  font-size: 30rpx;
  margin: 10rpx 20rpx;
  line-height: 88rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.youhui1 view text{
  margin: 0 10rpx;
  font-size: 24rpx;
  background: rgb(255, 165, 0);
  color: white;
  width: 130rpx;
  height: 36rpx;
  border-radius: 10rpx;
}
.youhui1 view text:nth-child(3){
  margin-right: 25rpx;
}
.youhui1 image{
  width: 66rpx;
  height: 66rpx;
  vertical-align: middle;
  float: right;
  margin-right: 30rpx;
}
.wechat{
  background: rgba(240, 233, 233, 0.836);
  height: 100rpx;
  margin: auto 0;
}
.wechat image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.wechat text{
  font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-size: 24rpx;
  color: rgba(148, 144, 144, 0.918);
}
.wechat view{
  padding: 22rpx 10rpx;
  line-height: 40rpx;
  height: 60rpx;
}
.nav-item{
  width: 100%;
}
.home{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  background: white;
  border-radius: 50%;
  top:20rpx;
  left:20rpx;
}
.home>view{
  width: 80rpx;
  height: 80rpx;
  text-align: center; /*图片居中方法 */
  vertical-align: middle;
  display: table-cell
}
.home image{
  width:50rpx;
  height: 50rpx; 
}
.shopping{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  z-index: 99;
  background: white;
}
.shopping view{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  vertical-align: middle;
  display: table-cell;
  border: 1px solid gray;
  color: white;
  font-size: 16px;
}
.shopping view:nth-child(1){
  border-right: 0;
}
.shopping view:nth-child(3){
  width: 300rpx;
  background: #323232;
  border: 0;
}
.shopping view:nth-child(4){
  width: 302rpx;
  background: #030303;
  border: 0;
}
.float{
  position: absolute;
  top: 0;
  left: 100rpx;
}
.float1{
  color:white;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top:11rpx;
  left:110rpx;
  line-height: 20rpx;
  font-size: 13px;
  text-align: center;
}
.yingchang{
  display: none
}
.shopping image{
  height: 50rpx; 
  width:50rpx;
}
.button1{
  margin-top: 5rpx;
  margin-left: 5rpx;
  height: 88rpx;
  width: 88rpx;
  position: absolute;
  top: 0;
  opacity: 0;
}
.none{
  /* 全屏遮罩 */
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  
}
.none view:nth-child(1){
  height: 84%;
  opacity: 0.4;
  background:#A29A8D;
}
.none view:nth-child(2){
  height: 8%;
  background: white;
}
.none view:nth-child(3){
  height: 8%;
  background: black;
}
.none view:nth-child(3) button{
  width: 100%;
  height: 99rpx;
  background: black;
  text-align: center;
  color: white;
}
.hide{
 display: none;
}
.show{ 
 display: block;
}
.bottom{
  line-height: 99rpx;
  padding-left: 15rpx;
}
.none view:nth-child(2) .anniu{
  height: 92rpx;
  width: 200rpx;
  float: right;
  background: white;
  z-index: 99;
  opacity: 1;
}
.anniu image{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  margin-bottom: 10rpx;
}
.anniu input{
  width: 70rpx;
  vertical-align: middle;
  display: inline-block;
  text-align: center;
  color: black;
  margin-bottom: 10rpx;
}