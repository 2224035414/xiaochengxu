/* pages/home/home.wxss */
/* 搜索框 */
.weui-cells{
  position: fixed;
  width: 100%;
  z-index: 99;
}
.view1{
  height: 94rpx;
}

.weui-input{
  border: 1px solid black;
  width: 750rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background: rgb(56, 55, 55);
  font-size: 25rpx;
  padding: 10rpx 0;
  padding-left: 87rpx;
}
.weui-cell_input{
  background: black;
  padding: 10rpx 0;
}
.image1{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 18rpx;
  top:19rpx;
}
/* 轮播图 */
.slider,.slider swiper,.slider image{
  height: 390rpx;
  width: 100%;
}
.container{
  margin: 0;
  padding: 0;
}
/* 灰色分割块 */
.divider{
  height: 20rpx;
  background: #f1f1f1;
}
/* 九宫格 */
.index-nav{
  display: flex;
  flex-wrap: wrap;
  background:#F6F6F6;
}
.index-nav .nav-item{
  position: relative;
  background: white;
  height: 485rpx;
  width: 347rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
  border:1rpx solid #ddd;
  /* item子元素弹性布局 */
  display: flex;
  flex-direction: column; /*子元素按列布局   */
  justify-content: center;/*水平居中 垂直居中*/
  align-items: center;
  font-size: 14px;/*小程序推荐使用字体px单位*/
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
.index-nav .nav-item:nth-child(1),.nav-item:nth-child(3),.nav-item:nth-child(5),.nav-item:nth-child(7),.nav-item:nth-child(9){
  margin-left: 19rpx
}
/* 将3 6 9边框去掉 */
.index-nav image{
  position: absolute;
  top: 0;
  width: 347rpx;
  height: 347rpx;
}
.view_title1{
  width:300rpx;
  position: absolute;
  bottom: 0;
  height: 136rpx;
}

.view_title1 view:first-child{
  font-size: 16px;
  margin-top: 10rpx;
  height: 77rpx;
}
.view_title1 view:last-child{
  margin-top: 10rpx;
  font-size: 14px;
}
.view_title1 view:last-child text:last-child{
  float: right;
  color: gray
}
.view_title view{
width:50%;
height: 100rpx;
display: inline-block;
text-align: center;
line-height: 100rpx;
color: gray
}

.goods{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  height: 80rpx;
}
.goods view{
  width: 33.3333333333%;
  text-align: center;
  font-size: 14px;
  line-height: 80rpx;
}
/* 点击出现边框下 */
.view_title .border_bottom{
  border-bottom: 1px solid black;
  color: black
}

/* 灰色分割块 */
.divider{
  height: 20rpx;
